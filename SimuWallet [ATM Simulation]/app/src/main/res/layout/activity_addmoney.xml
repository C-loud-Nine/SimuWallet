<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:background="#FC946A"
    android:padding="20dp"
    >

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/addmonii"
        android:transitionName="logo_image" />

    <TextView
        android:id="@+id/pinchangelogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:fontFamily="@font/bree_serif"
        android:text="@string/simuwallettt"
        android:textColor="#344155"
        android:textColorHint="@color/design_default_color_error"
        android:textSize="45sp"
        android:transitionName="logo_text"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/diilogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/amiko"
        android:text="Deposit Maximum of 100000 at a Time"
        android:textColor="#395B71"
        android:textSize="17sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Amount"
        android:textColorHint="@color/black"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/addamount">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginBottom="15dp"
            android:background="#E9E7E3"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnaddmoni"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Deposit"
            android:textColor="#ffffff"
            app:backgroundTint="#3c3b6e"
            android:textStyle="bold"
            android:background="#3c3b6e" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_addmoni_back"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Back"
            android:textColor="#ffffff"
            app:backgroundTint="#3c3b6e"
            android:textStyle="bold"
            android:background="#3c3b6e"/>

    </LinearLayout>
</LinearLayout>
